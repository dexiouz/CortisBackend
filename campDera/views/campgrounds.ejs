<% include partials/header %>

  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
    <div class="container-fluid">
      <div class="navbar-header"> 
        <a href="/" class="navbar-brand">campDera</a>
      </div>
    </div>
  </nav>
  <div class="container">

    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to Chidera's Camp</h1>
        <p>Check our beautiful camp grounds from all over the world</p>
        <p>
          <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new camp ground</a>
        </p>
      </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
      <% campgrounds.forEach((camp)=>{ %>
        <div class="col-lg-3 col-md-4 col-sm-6" style="margin-bottom: .1rem; margin-top: .9rem">
        <div class="img-thumbnail">
          <img style="width: 100%; height:100%" src="<%= camp.image %>" />
          <div class="caption">
            <h4><%= camp.name %></h4>
          </div>
        </div>
      </div>
        <% }) %>
    </div>


 

  </div>

  <% include partials/footer%>