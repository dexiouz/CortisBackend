<% include ../partials/header%>

  <div class="container">

    <h1 style="text-align: center">Edit <%= campground.name %></h1>
    <div class="row">
      <div style="width: 30%; margin: 30px auto">
        <form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="name" value="<%= campground.name %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="file" name="image">Select a new image or yet still select "<%=campground.image%>" which is the default image else no image will be displayed.</input>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="description" value="<%= campground.description %>">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-secondary btn-block">submit!</button>
          </div>
        </form>
        <a href="/campgrounds">Go Back</a>
      </div>
    </div>
    
  </div>

  <% include ../partials/footer%>