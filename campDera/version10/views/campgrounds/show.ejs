<% include ../partials/header%>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Camp Dera</p>
      <div class="list-group">
        <div class="list-group-item active"> Info 1 </div>
        <div class="list-group-item"> Info 2 </div>
        <div class="list-group-item"> Info 3 </div>
      </div>
    </div>
    <div class="col-md-9">
       <div class="img-thumbnail">
        <img class="img-responsive"src="<%= campground.image %>">
        <div class="caption-full">
          <h4 class="float-right">$34.00/night</h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
          <p>
            <em>Submitted by <strong><%= campground.author.username %></strong></em>
          </p>
        </div>
       </div>
       <div class="card mt-3 p-3">
         <div class="text-right">
          <a class="btn btn-success" href="/campgrounds/<%=campground._id %>/comments/new"> Add new comment</a>
         </div>
         <hr>
         <% campground.comments.forEach(comment =>{ %>
          <div class="row">
            <div class="col-md-12">
              <strong> <%= comment.author.username %></strong>
              <span class="float-right">3days ago</span>
              <p>
                <%=comment.text %>
                </p>
            </div>
          </div>
        <% }) %>
       </div>
    </div>
  </div>
</div>
  <% include ../partials/footer %>