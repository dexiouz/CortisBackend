<% include ../partials/header%>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Camp Dera</p>
      <div class="list-group">
        <div class="list-group-item active"> Info 1 </div>
        <div class="list-group-item"> Info 2 </div>
        <div class="list-group-item"> Info 3 </div>
      </div>
    </div>
    <div class="col-md-9">
       <div class="img-thumbnail">
        <img class="img-responsive"src="<%= campground.image %>">
        <div class="caption-full">
          <h4 class="float-right">$<%= campground.price%>/night</h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
          <p>
            <em>Submitted by <strong><%= campground.author.username %></strong></em>
          </p>
          <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
            <a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
            <form id="delete-form" class="float-right" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger"> Delete</button>
            </form>
          <% } %>
        </div>
       </div>
       <div class="card mt-3 p-3">
         <div class="text-right">
          <a class="btn btn-success" href="/campgrounds/<%=campground._id %>/comments/new"> Add new comment</a>
         </div>
         <hr>
         <% campground.comments.forEach(comment =>{ %>
          <div class="row">
            <div class="col-md-12">
              <strong> <%= comment.author.username %></strong>
              <span class="float-right">3days ago</span>
              <p>
                <%=comment.text %>
                </p>
            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                <a 
                  href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit"
                  class="btn btn-warning btn-sm"
                >
                  Edit
                </a>
                <form id="delete-form"  action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                  <button class="btn btn-sm btn-danger"> Delete</button>
                </form>
                <% } %>
            </div>
          </div>
        <% }) %>
       </div>
    </div>
  </div>
</div>
  <% include ../partials/footer %>