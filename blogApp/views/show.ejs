<% include partials/header%>
  <div class="ui main text container segment">
    <div class="ui huge header"> <%=foundBlog.title%></div>
    <div class="ui top attached ">
      <div class="item">
        <img class="ui centered rounded image" style="width: 60%; height: 50%" src="/assets/<%=foundBlog.image%>" alt="">
      </div>
      <div class="content">
        <span><%=foundBlog.Date.toDateString()%></span>
      </div>
      <div class="description">
        <p><%=foundBlog.body%></p>
      </div>
      <form class="ui form" action="/blogs/<%=foundBlog.id%>/edit" method="POST
        ">
        <div class="field">
         <a class="ui green button" href="/blogs/<%=foundBlog.id%>/edit">Edit</a>
      <form action="/blogs/<%=foundBlog._id%>?_method=DELETE" method="POST" class="ui form">
        <button class="ui red button" >Delete</button>
      </form>
    </div>
  </div>
<% include partials/footer%>